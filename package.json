{
  "name": "jirung-senior-advisor",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:run && npm run test:e2e",
    "test:coverage": "vitest run --coverage",
    "test:qa": "node scripts/run-qa-tests.js",
    "deploy:check": "node scripts/deployment-check.js",
    "deploy:test": "node scripts/production-test.js",
    "deploy:verify": "scripts/verify-deployment.sh",
    "deploy:verify:full": "scripts/verify-deployment.sh http://localhost:3000 --full",
    "deploy:vercel": "vercel --prod",
    "deploy:staging": "vercel",
    "analyze": "ANALYZE=true npm run build",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html --chrome-flags='--headless'",
    "perf:test": "npm run test:e2e -- --grep='Performance'",
    "a11y:test": "npm run test:e2e -- --grep='Accessibility'",
    "db:migrate": "node scripts/migrate-to-postgres.js",
    "db:setup": "node scripts/migrate-to-postgres.js",
    "kv:migrate": "node scripts/migrate-to-postgres.js"
  },
  "dependencies": {
    "@google/genai": "^1.17.0",
    "autoprefixer": "^10.4.21",
    "dotenv": "^17.2.2",
    "next": "15.5.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "webpack-bundle-analyzer": "^4.10.1",
    "axe-playwright": "^2.0.1"
  }
}
